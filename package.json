{
  "name": "tinyjobs",
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "prettier": "^3.3.3",
    "turbo": "^2.1.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.26",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ci:version": "bunx changeset version && bun install",
    "ci:publish": "bunx changeset publish"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
